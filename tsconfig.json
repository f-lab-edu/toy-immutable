{
  "compilerOptions": {
    "target": "ES6",                     // 컴파일 대상
    "module": "CommonJS",                 // 모듈 시스템
    "strict": true,                       // 엄격 모드
    "esModuleInterop": true,              // ES 모듈 호환성
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "./dist",                   // 컴파일 결과 출력 폴더
    "rootDir": "./src"                    // 소스 코드 폴더
  },
  "include": ["src/**/*"],                // 컴파일 포함 경로
  "exclude": ["node_modules", "dist"]     // 제외 경로
}
